<% content_for :header_tags do %>
<%= stylesheet_link_tag 'scm' %>

<style type="text/css">
/* This fixes the diff pastes display. */
div.paste .syntaxhl div {
  display: block;
}

table.CodeRay td.line_numbers {
  text-align: right;
}
</style>
<% end %>

<% html_title paste_title(@paste) %>

<h2><%=h paste_title(@paste) %></h2>

<p>
Link to this paste: <%= link_to paste_url(@paste), @paste %>
</p>

<p>
<%= render :partial => "authorship", :locals => { :paste => @paste } %><br>
Language: <%= pastebin_language_name(@paste.lang) %>
</p>

<div class="paste">
<%= highlighted_content_for_paste(@paste) %>
</div>

<p>
<%= manage_paste_links(@paste) %>
</p>

<%= render "sidebar" %>
